<% layout('layouts/boilerplate') %>
<body>
    <div class="row mt-3">
        <div class="col-8 offset-md-2">

            
        <h1><b><%=listing.title%></b></br></h1>
        </div>
        <div class="card col-6 offset-2 show-card">
            <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="listing_image">
            
        </div>
        <div class="card-body">
        <div class="col-6 offset-2 mt-3">
            <ul>
                <b>Owned by <%=listing.owner.username%></b>
                <li><%=listing.description%></li>
                
                <li>&#8377;<%=listing.price.toLocaleString("en-IN")%></li>
                <li><%=listing.location%></li>
                <li><%=listing.country%></li>
            </ul>
        </div>
        </div>
        <% if (currUser && currUser._id.equals(listing.owner._id)) { %>
        <div class="btns">
            <a href ="/listings/<%=listing._id%>/edit " class="btn btn-dark col-1 offset-2 ">Edit </a>
            <br/><br/>
            <form method="POST" action="/listings/<%=listing._id%>?_method=DELETE">
                <button type="submit" class="btn btn-dark  offset-4 edit-btn">Delete </button>
            </form>
        </div> 
        <%}%>
    </br>
    <hr>
        
        <div class="col-8 offset-3 mb-3">
            <% if(currUser) { %>
            <h4>Leave a review</h4>
            <form method="POST" action="/listings/<%=listing.id %>/reviews" novalidate class="needs-validation">
                <div class="mb-3 mt-3">
                    <label for="review" class="form-label">Rating</label>
                    <input type="range" class="form-range" id="rating" name="review[rating]" min="1" max="5">
                
                </div>
                <div class="mb-3 mt-3">
                    <label  for ="comment" class="form-label">Comment</label>
                    <textarea class="form-control" id="comment" name="review[comment]" rows="5" cols="30">
                    </textarea>
                    <div class="invalid-feedback">Please enter some comment</div>
                </div>
                <button class="btn btn-outline-dark">submit</button>
            </form>
            <%}%>
            
            <p><b>All Reviews</b> </p>
            
            <div class="row">
                
                <% for (review of listing.reviews) {%>
                <div class="card col-5 ms-3 mb-3 listing-card">
                    <div class="card-body">
                        <h5 class="card-title"><%=review.author.username%></h5>
                        <p class="card-text"><%=review.comment%></p>
                        <p class="card-text"><%=review.rating%></p>
                        <% if (currUser && currUser._id.equals(listing.owner._id)) { %>
                        <form class="mb-3 "method ="POST" action="/listings/<%=listing._id%>/reviews/<%=review._id %>?_method=DELETE">
                            <button class="btn btn-dark btn-sm">Delete </button>
                        </form>
                    </div>
                </div>
                <% } %>
                      <% }  %>
                
            </div>
        </div>
    </div>
    <script src="/views/public/js/script.js"></script>
</body>
